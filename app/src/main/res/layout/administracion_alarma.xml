<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/adminbackground">

    <Button
        android:id="@+id/botonEncender"
        android:layout_width="256dp"
        android:layout_height="110dp"
        android:backgroundTint="#264350"
        android:text="Encender alarma"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="614dp" />

    <Button
        android:id="@+id/botonApagar"
        android:layout_width="256dp"
        android:layout_height="111dp"
        android:backgroundTint="#264350"
        android:text="Apagar alarma"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="757dp" />

    <TextView
        android:id="@+id/estadoAlarma"
        android:layout_width="244dp"
        android:layout_height="88dp"
        android:gravity="center_vertical"
        android:text="Apagado"
        android:textAlignment="center"
        android:textColor="#F40606"
        android:textSize="45sp"
        tools:layout_editor_absoluteX="102dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/activationText"
        android:layout_width="315dp"
        android:layout_height="92dp"
        android:background="#264350"
        android:gravity="center_vertical"
        android:text="Mensaje BT"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="316dp" />

</androidx.constraintlayout.widget.ConstraintLayout>